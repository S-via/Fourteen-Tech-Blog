<!--display all posts  -->
<div class="card">
    <div class="card-header">
        {{#if blogposts.length}}
    </div>
    <div class="card-body">
        {{#each blogposts as |blogpost|}}
        <blockquote class="blockquote mb-0">
            <a href="/comment/{{blogpost.id}}"><p>{{blogpost.title}}</p></a>
            <footer class="blockquote-footer">Posted by: {{blogpost.user.username}}</footer>
            {{#each blogpost.comments as |comment|}}
            <p>{{comment.comments}}</p>
            {{/each}}
        </blockquote>
        {{/each}}
    </div>
</div>

{{else}}
<p>no blogs found</p>
{{/if}}


