<!-- when user clicks dashboard they will be presnted with  their own post-->
{{if blogs.length}}
<div>
    <h1>Your Blog Post History</h1>
{{#each blogs as|blog|}}

<div class="card">
  <div class="card-header">
    <a href="/update/{{blog.id}}">{{blog.title}}</a> <!--add edit route inside link -->
  </div>
  <div class="card-body">
    <p class="card-text">{{blog.content}}</p>
    <a href="#" class="btn btn-primary">Go somewhere</a>
  </div>
</div>

{{/each}}
</div>
{{/if}}
<!-- button to add new post -->
<button type="submit" class="btn btn-primary">Add New Post </button>

